#coding: utf-8
import numpy as np

class BinTree(object):
    def __init__(self, rand):
        self.rand = rand
        pass

    def born_two_children(self, parent):
        l = parent
        if self.rand() > 0.9:
            l = -l
        r = parent
        if self.rand() > 0.9:
            r = -r
        return (l, r)

    def born_next_children(self, parent_list):
        ret_list = []
        for i in parent_list:
            p = parent_list[i]
            for j in xrange(2):
                if self.rand() > 0.9:
                    ret_list.append(p)
                else:
                    ret_list.append(-p)

        return ret_list
